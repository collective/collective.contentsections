<html metal:use-macro="context/@@main_template/macros/master">
  <metal:main fill-slot="main">
    <metal:content-core define-macro="content-core">

      <h2 tal:condition="not:context/hide_title">${context/title}</h2>
      <div class="row row-cols-1 row-cols-md-${context/group_size} g-4">
        <div class="col" tal:repeat="item view/items">
          <div class="card">
            <img tal:condition="view/show_item_lead_image" src="${item/lead_image_url}" class="card-img-top" alt="Lead image" />
            <div class="card-body">
              <a href="${item/url}">
                <span class="section-item-title">${item/title}</span>
              </a>
              <p class="section-item-description" tal:condition="view/show_item_description">${item/description}</p>
            </div>
          </div>
        </div>
      </div>
      <div tal:condition="view/all_items_link_text | nothing" class="section-all-items-link">
        <a href="${view/all_items_link_url}">${view/all_items_link_text}</a>
      </div>

    </metal:content-core>
  </metal:main>
</html>
